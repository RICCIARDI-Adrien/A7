BINARY_NAME = Benchmark.hex
SOURCES = $(MAIN_MAKEFILE_APPLICATION_PATH_SOURCES)/Benchmark_Bouncing_Balls.c $(MAIN_MAKEFILE_APPLICATION_PATH_SOURCES)/Benchmark_Floating_Point_Arithmetic.c $(MAIN_MAKEFILE_APPLICATION_PATH_SOURCES)/Benchmark_Random_Numbers_Generator.c $(MAIN_MAKEFILE_APPLICATION_PATH_SOURCES)/Main.c

$(MAIN_MAKEFILE_PATH_BINARIES)/$(BINARY_NAME):
	$(MAIN_MAKEFILE_C_COMPILER) $(MAIN_MAKEFILE_C_COMPILER_FLAGS) --DOUBLE=32 $(SOURCES) -O$(BINARY_NAME)
	@cp $(MAIN_MAKEFILE_APPLICATION_PATH_OBJECTS)/$(BINARY_NAME) $(MAIN_MAKEFILE_PATH_BINARIES)

clean:
	rm -f $(MAIN_MAKEFILE_PATH_BINARIES)/$(BINARY_NAME)
