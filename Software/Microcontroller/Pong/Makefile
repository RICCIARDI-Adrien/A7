BINARY_NAME = Pong.hex
SOURCES = $(MAIN_MAKEFILE_APPLICATION_PATH_SOURCES)/Main.c
TARGET_APPLICATION_NAME = Pong

$(MAIN_MAKEFILE_PATH_BINARIES)/$(BINARY_NAME):
	$(MAIN_MAKEFILE_C_COMPILER) $(MAIN_MAKEFILE_C_COMPILER_FLAGS) $(SOURCES) -O$(BINARY_NAME)
	@cp $(MAIN_MAKEFILE_APPLICATION_PATH_OBJECTS)/$(BINARY_NAME) $(MAIN_MAKEFILE_PATH_BINARIES)

clean:
	rm -f $(MAIN_MAKEFILE_PATH_BINARIES)/$(BINARY_NAME)
