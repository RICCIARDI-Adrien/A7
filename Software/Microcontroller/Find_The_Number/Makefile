BINARY_NAME = Find_The_Number.hex
MAIN_MAKEFILE_C_COMPILER_FLAGS += --objdir=$(MAIN_MAKEFILE_APPLICATION_PATH_OBJECTS) --outdir=$(MAIN_MAKEFILE_APPLICATION_PATH_OBJECTS) -I$(MAIN_MAKEFILE_APPLICATION_PATH_INCLUDES)

SOURCES = $(MAIN_MAKEFILE_APPLICATION_PATH_SOURCES)/Main.c

all:
	$(MAIN_MAKEFILE_C_COMPILER) $(MAIN_MAKEFILE_C_COMPILER_FLAGS) $(SOURCES) -O$(BINARY_NAME)
	@cp $(MAIN_MAKEFILE_APPLICATION_PATH_OBJECTS)/$(BINARY_NAME) $(MAIN_MAKEFILE_PATH_BINARIES)
	
clean:
	rm -f $(MAIN_MAKEFILE_APPLICATION_PATH_OBJECTS)/* $(MAIN_MAKEFILE_PATH_BINARIES)/$(BINARY_NAME)
