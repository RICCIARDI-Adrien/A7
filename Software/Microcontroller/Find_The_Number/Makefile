PATH_INCLUDES = Includes
PATH_OBJECTS = Objects
PATH_SOURCES = Sources

BINARY_NAME = Find_The_Number.hex
APPLICATIONS_RULES_C_COMPILER_FLAGS += --objdir=$(PATH_OBJECTS) --outdir=$(PATH_OBJECTS) -I$(PATH_INCLUDES)

SOURCES = $(PATH_SOURCES)/Main.c

all:
	$(APPLICATIONS_RULES_C_COMPILER) $(APPLICATIONS_RULES_C_COMPILER_FLAGS) $(SOURCES) -O$(BINARY_NAME)
	@cp $(PATH_OBJECTS)/$(BINARY_NAME) $(APPLICATIONS_RULES_PATH_BINARIES)
	
clean:
	rm -f $(PATH_OBJECTS)/* $(APPLICATIONS_RULES_PATH_BINARIES)/$(BINARY_NAME)